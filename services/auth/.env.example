# Web or desktop app base URL (used to redirect after email verification)
APP_BASE_URL=http://localhost:5173

# PostgreSQL: e.g., postgres://user:pass@host:port/db
DATABASE_URL=postgresql+psycopg://USER:PASSWORD@HOST:PORT/DBNAME

# Email sender info
EMAIL_FROM="PokeDB <no-reply@your-domain.com>"

# SMTP (simple + cheap, works with most providers; or swap to an API provider in emailer.py)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USERNAME=apikey_or_username
SMTP_PASSWORD=your_smtp_password
SMTP_USE_TLS=true

# Flask
FLASK_ENV=development
FLASK_DEBUG=1

# Security (token signing)
SECRET_KEY=please-change-me