{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@root/*": ["*"],
      "@ui/*": ["packages/ui/src/*"],
      "@app-ui/*": ["packages/app-ui/src/*"],
      "@components/*": ["packages/app-ui/src/components/*"]
    },
    "typeRoots": [
      "./packages/types/ambient",
      "./node_modules/@types"
    ]
  }
}
